
<!-- Main content -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Compras Carro
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Subtotal</th>
          <th>Eliminar</th>
        </tr>
        </thead>
        <tbody>
        <% @order.each do |actual| %>
            <tr>
              <td><%= actual.id %></td>
              <td><%= actual.nombre %></td>
              <td><%= actual.apellido %></td>
              <td><%= actual.sub_total %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, orderes_path(actual), method: :eliminar, data: { confirm: '¿Está seguro?' }, class: 'btn btn-danger' %></td>
            </tr>
        <%end%>
        </tbody>
        <tfoot>
        </tfoot>
      </table>
    </div>

  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

