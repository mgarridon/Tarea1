
<!-- Main content -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Rutas
      <%= link_to 'Agregar Ruta', nueva_ruta_path,:class =>'btn bg-olive margin' %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">
      <table id="example1" class="table table-bordered table-striped table-responsive-sm">
        <thead>
        <tr>
          <th>Descripcion</th>
          <th>Recorrido</th>
          <th>Empresa</th>
          <th>Horario</th>
          <th>Mostrar</th>
          <th>Editar</th>
          <th>Borrar</th>
        </tr>
        </thead>
        <tbody>
        <% @ruta.each do |actual| %>
            <tr>
              <td><%= actual.descripcion%></td>
              <td><%= actual.recorrido %></td>
              <td><%= actual.id_empresa %></td>
              <% horario = @horario.find(actual.id_horario.to_i)%>

              <%inicio = horario.hora_inicio.to_s%>
              <% start = inicio.split(' ')  %>
              <%termino = horario.hora_termino.to_s%>
              <% final = termino.split(' ')  %>
              <td><%= horario.periodo.to_s+' '+start[1].to_s+' - '+final[1].to_s  %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-book"></i>'.html_safe,  ruta_path(actual), class: 'btn btn-success' %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe,  editar_ruta_path(actual), class: 'btn btn-info' %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, rutas_path(actual), method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-danger' %></td>

            </tr>
        <%end%>
        </tbody>
        <tfoot>
        </tfoot>
      </table>
    </div>

  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

