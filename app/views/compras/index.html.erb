
<!-- Main content -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Compras
      <%= link_to 'Agregar Compra', nueva_compra_path,:class =>'btn bg-olive margin' %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
        <tr>
          <th>ID</th>
          <th>Fecha</th>
          <th>Proveedor</th>
          <th>Nombre Empresa</th>
          <th>Mostrar</th>
        </tr>
        </thead>
        <tbody>
        <%@compra.each do |compra| %>
          <tr>
            <td><%= compra.id %></td>
            <td><%= compra.fecha.strftime('%d-%m-%Y') %></td>
            <% proveedor = @proveedores.find(compra.id_proveedor.to_i) %>
            <td><%= proveedor.rut %></td>
            <td><%= proveedor.nombre_empresa %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-book"></i>'.html_safe,  compra_path(compra), class: 'btn btn-success' %></td>
          </tr>
        <% end %>
        </tbody>
        <tfoot>
        </tfoot>
      </table>
    </div>

  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

<script>

    $(document).ready(function() {
        $('#example1').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
            }
        });
    });

    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging'      : true,
            'lengthChange': false,
            'searching'   : false,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : false
        })
    })
</script>