<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">

      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Listado Categorias
            <%= link_to 'Agregar Categoria', nueva_categoria_path,:class =>'btn bg-olive margin' %></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
              <thead>
              <tr>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Tipo</th>
                <th>Mostrar</th>
                <th>Editar</th>
                <th>Borrar</th>
              </tr>
              </thead>
              <tbody>
              <% @categoria.each do |actual| %>
                  <tr>
                    <td><%= actual.id%></td>
                    <td><%= actual.descripcion %></td>
                    <td><%= actual.nombre %></td>
                    <td><%= link_to '<i class="glyphicon glyphicon-book"></i>'.html_safe,  categoria_path(actual), class: 'btn btn-success' %></td>
                    <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe,  editar_categoria_path(actual), class: 'btn btn-info' %></td>
                    <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, categorias_path(actual), method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-danger' %></td>

                  </tr>
              <%end%>
              </tbody>
              <tfoot>
              </tfoot>
            </table>
          </div>

        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->


</section>
<!-- /.content -->
<script>


$(document).ready(function() {
  $('#example1').DataTable({
    "language": {
      "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
    }
  });
});

    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
