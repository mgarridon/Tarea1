
<!-- Main content -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Productos
      <% if current_user %>
      <%= link_to 'Agregar Producto', nuevo_producto_path,:class =>'btn bg-olive margin' %></h3>
    <select name="post[categoria_id]" id="categoria_id">
      <option value="">Elija un Proveedor</option>
      <% Proveedor.all.each do |r| %>
        <option value="<%= r.id %>"><%= r.nombre_empresa %></option>
      <% end %>
    </select>
      <% end %>
  </div>


  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Precio Venta</th>
          <th>Marca</th>
          <th>Descripcion</th>
          <th>Carro</th>
          <% if current_user %>
          <th>Mostrar</th>
          <th>Editar</th>
          <th>Borrar</th>
          <% end %>
        </tr>
        </thead>
        <tbody>
        <% @producto.each do |actual| %>
            <tr>
              <td><%= actual.nombre%></td>
              <td><%= actual.precio %></td>
              <td><%= actual.marca %></td>
              <td><%= actual.descripcion%></td>
              <td><%= form_for(@order_item, remote: true) do |f| %>
                  <%= f.hidden_field :product_id, value: actual.id %>
                  <div class="form-group">
                    <%= f.text_field :quantity, value: 1, min: 1, class: 'form-control' %>
                  </div>
                  <%= f.submit "Add to cart", class: 'btn btn-primary btn-sm' %>
                <% end %></td>
              <% if current_user %>
              <td><%= link_to '<i class="glyphicon glyphicon-book"></i>'.html_safe,  producto_path(actual), class: 'btn btn-success' %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe,  editar_producto_path(actual), class: 'btn btn-info' %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, productos_path(actual), method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-danger' %></td>
              <% end %>
            </tr>
        <%end%>
        </tbody>
        <tfoot>
        </tfoot>
      </table>
    </div>

  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

