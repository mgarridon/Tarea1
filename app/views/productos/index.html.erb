
<!-- Main content -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Productos
      <% if current_user %>
      <%= link_to 'Agregar Producto', nuevo_producto_path,:class =>'btn bg-olive margin' %></h3>
      <% end %>
  </div>





  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Precio Venta</th>
          <th>Marca</th>
          <th>Descripcion</th>
          <th>Categoria</th>
          <th>Carro</th>
          <% if current_user %>
          <th>Mostrar</th>
          <th>Editar</th>
          <th>Borrar</th>
          <% end %>
        </tr>
        </thead>
        <tbody>
        <% @producto.each do |actual| %>
            <tr>
              <td><%= actual.nombre%></td>
              <td><%= actual.precio %></td>
              <td><%= actual.marca %></td>
              <td><%= actual.descripcion %></td>
              <td><%= form_tag orderes_item_path do %>
                  <%= hidden_field_tag :producto_id, actual.id %>
                  <%= number_field_tag :cantidad, 1 %>
                  <%= submit_tag "Agregar al Carro" %>
                <% end %>
              </td>
              <% if current_user %>
              <td><%= link_to '<i class="glyphicon glyphicon-book"></i>'.html_safe,  producto_path(actual), class: 'btn btn-success' %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe,  editar_producto_path(actual), class: 'btn btn-info' %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, productos_path(actual), method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-danger' %></td>
              <% end %>
            </tr>
        <%end%>
        </tbody>
        <tfoot>
        </tfoot>
      </table>
    </div>

  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

<script>

$(document).ready(function() {
  $('#example1').DataTable({
    "language": {
      "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
    }
  });
});

