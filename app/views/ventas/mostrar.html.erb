<div class="box">
  <div class="box-header">
    <h1 class="box-title">Mostrar Venta</h1>
    <div class="right_col" role="main">
      <div class="row">
        <div class="row">
          <div class="col-md-12">
            <div class="x_panel">


              <div class="x_content">
                <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
                <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>

                <div class="container">
                  <div class="row">


                    <div class="container">
                      <div class="row">

                        
                        <%@descripcionVenta.each do |venta| %>
                          <p class="list-group-item-text">
                          <ul>
                            <li>
                              <b>Producto: <%= @productos.find(venta.id_producto).nombre.capitalize %> </b>
                            </li>
                            <li>
                              <b>Cantidad: <%= venta.cantidad %></b>
                            </li>
                            <li>
                              <b>Sub Total: $<%= (venta.cantidad).to_i * (venta.precio_act).to_i %></b><br>
                              <label class="text-muted">
                                <small>Precio unitario: $<%= venta.precio_act %></small>
                              </label>
                            </li>
                            <% @CostoTotal = @CostoTotal + ((venta.cantidad).to_i * (venta.precio_act).to_i) %>
                          </ul>
                          </p>
                        <% end %>
                        <div class="panel-footer">
                          <label class="form-label">Venta total: $<%= @CostoTotal %></label>
                        </div>

                        <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                          <div class="form-group"></div>

                          <%= link_to 'AtrÃ¡s', ventas_path , class:'btn btn-danger' %>
                        </div>




                      </div>

                    </div>

                  </div>

                </div>


              </div>
            </div>



            <!-- /.modal-dialog -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

