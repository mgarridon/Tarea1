
<!-- Main content -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Horarios
      <%= link_to 'Agregar Periodo', nuevo_horario_path,:class =>'btn bg-olive margin' %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
        <tr>
          <th>Dia</th>
          <th>Periodo</th>
          <th>Hora Inicio</th>
          <th>Hora Termino</th>
          <th>Mostrar</th>
          <th>Editar</th>
          <th>Borrar</th>
        </tr>
        </thead>
        <tbody>
        <% @horario.each do |actual| %>
            <tr>
              <td><%= actual.dia%></td>
              <td><%= actual.periodo %></td>
              <%inicio = actual.hora_inicio.to_s%>
              <% start = inicio.split(' ')  %>
              <td><%=start[1]%></td>

              <%termino = actual.hora_termino.to_s%>
              <% final = termino.split(' ')  %>
              <td><%=final[1]%></td>
              <td><%= link_to '<i class="glyphicon glyphicon-book"></i>'.html_safe,  horario_path(actual), class: 'btn btn-success' %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe,  editar_horario_path(actual), class: 'btn btn-info' %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, horarios_path(actual), method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-danger' %></td>

            </tr>
        <%end%>
        </tbody>
        <tfoot>
        </tfoot>
      </table>
    </div>

  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

<script>

$(document).ready(function() {
  $('#example1').DataTable({
    "language": {
      "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
    }
  });
});
