
<!-- Main content -->
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Listado Choferes
      <%= link_to 'Agregar Chofer', nuevo_chofer_path,:class =>'btn bg-olive margin' %></h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
        <tr>
          <th>Rut</th>
          <th>Nombres</th>
          <th>Apellido Paterno</th>
          <th>Apellido Materno</th>
          <th>Fecha Ingreso</th>
          <th>Mostrar</th>
          <th>Editar</th>
          <th>Borrar</th>
        </tr>
        </thead>
        <tbody>
        <% @chofer.each do |actual| %>
            <tr>
              <td><%= actual.rut %></td>
              <td><%= actual.nombres %></td>
              <td><%= actual.apellido_pat %></td>
              <td><%= actual.apellido_mat %></td>
              <td><%= actual.fecha_ingreso %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-book"></i>'.html_safe,  chofer_path(actual), class: 'btn btn-success' %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe,  editar_chofer_path(actual), class: 'btn btn-info' %></td>
              <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, choferes_path(actual), method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-danger' %></td>

            </tr>
        <%end%>
        </tbody>
        <tfoot>
        </tfoot>
      </table>
    </div>

  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
</div>
<!-- /.col -->
</div>
<!-- /.row -->
</section>
<!-- /.content -->
</div>

